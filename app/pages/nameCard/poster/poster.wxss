/* pages/product/shareMiddlePage/shareMiddlePage.wxss */

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: white;
}

.shade_show {
  position: absolute;
  z-index: 9;
  background: transparent;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.shade_hide {
  position: absolute;
  z-index: 9;
  background: transparent;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: none;
}

.canvas_pre {
  position: absolute;
  z-index: 1;
  top: -6000px;
  left: 0px;
  width: 500px;
  height: 400px;
}

.header_des_pre {
  position: absolute;
  margin-left: 8%;
  margin-right: 8%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.header_des_title {
  font-size: 25rpx;
  color: #323232;
}

.header_des_text {
  font-size: 25rpx;
  color: #666;
  margin-top: 10rpx;
  margin-left: 10rpx;
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

swiper {
  width: 100%;
  height: 100vh;
}

.poster_pre {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transform: scale(0.8);
  transition: all 0.3s ease;
}

.poster_pre.le-active {
 transform: scale(1);
}

.poster_pre2 {
  width: 100%;
  height: auto;
  position: absolute;
}

.view_num {
  width: 100%;
  position: absolute;
  z-index: 1;
}

.item-num {
  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
  width: 60rpx;
  height: 35rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  color: white;
  background: #000;
  border-radius: 20rpx;
  opacity: 0.6;
}

.poster {
  width: 100%;
}

.poster_bottom {
  position: absolute;
  display: flex;
  flex-direction: row;
  width: 93%;
  height: 180rpx;
  background: white;
  border-radius: 20rpx;
  margin-left: 4%;
  bottom: 20rpx;
}

.poster_portrait {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin-top: 45rpx;
  margin-left: 20rpx;
}

.poster_text_name {
  width: 200rpx;
  font-size: 30rpx;
  font-weight: 550;
  color: #353535;
  margin-top: 67rpx;
  margin-left: 20rpx;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.poster_line {
  display: flex;
  width: 2rpx;
  height: 120rpx;
  margin-top: 30rpx;
  background: #e4e4e4;
  justify-content: center;
}

.poster_bottom_qrcode {
  display: flex;
  flex-direction: column;
}

.poster_bottom_qrcode_img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
  margin-left: 18rpx;
}

.poster_bottom_qrcode_text {
  font-size: 15rpx;
  color: #999;
  margin-top: 10rpx;
  margin-left: 18rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e60a30;
}

.bottom-text {
  font-size: 30rpx;
  color: white;
}
