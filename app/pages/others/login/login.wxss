page {
  background-color: white;
}

.content {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin: 20vh auto 0;
}

.section {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  height: 90rpx;
  padding:20rpx 0;
  line-height: 26rpx;
  border-bottom: #e4e4e4 1rpx solid;
  position: relative;
  margin-top:10px;
}

.left {
  width: 18px;
  height: 18px;
  margin-left: 14px;
  margin-right: 14px;
}

.input-grid,.input-grid-mes {
  border:none;
  font-size:12pt;
  height:26rpx;
  width:100%;
}
.input-grid-mes{
  width:60%;
}

.placeholder_class {
  color: #979797;
}

.cancel {
  width: 20px;
  height: 15px;
  margin: 5px 12px 0;
}

.get {
  position: absolute;
  right:0;
  top: 3px;

  width: 90px;
  height: 35px;
  line-height: 35px;
  color: #27a1e5;
  font-size: 12pt;
  text-align: center;
  margin-left: 19px;
  border-left:1px solid #e4e4e4;
}

.get_not {
  position: absolute;
  right:0;
  top: 3px;

  width: 90px;
  height: 35px;
  line-height: 35px;
  color: #27a1e5;
  font-size: 12pt;
  text-align: center;
  margin-left: 19px;
  border-left:1px solid #e4e4e4;
}

.land_button {
  width: 290px;
  height: 50px;
  line-height: 50px;
  background: #e60a30;
  font-size: 18px;
  text-align: center;
  border-radius: 8px;
  color: #fff;
  margin-top: 25px;
  border:1px solid #e60a30;
}

.mongolia {
  display: none;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.mask_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  width: 90%;
  border-radius: 10px;
}

.section1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 250px;
  height: 50px;
  border: 1px solid #f6f6f9;
  border-radius: 25px;
  margin-top: 22px;
  background: white;
}

.identify_input1 {
  /* width: 140px; */
  font-size: 15px;
}

.sure_button {
  width: 250px;
  height: 50px;
  line-height: 50px;
  background: #24c43e;
  font-size: 15px;
  text-align: center;
  border-radius: 25px;
  color: #fff;
  margin-top: 40px;
  margin-bottom: 22px;
}

.input-grid-slide {
  margin:20px auto 0;
}

.input-grid-slide input {
    border: 1px solid #cccccc;
    border-radius: 2px;
    padding: 0 10px;
    width: 240px;
    height: 40px;
    font-size: 14px;
}


/* 添加授权 */

.getuserinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width:100%;
  padding: 20% 0;
}

.tairan-img {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.content-world {
  display: flex;
  flex-direction: column;
  align-items:center;
  font-size:12pt;
}

.small-world{
  margin-top: 10rpx;
  color: #666;
}

.content-btn {
  margin-top: 50px;
  width: 100%;
}

.land_buttons{
  width: 90%;
  
}

.receive-gift{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.79);
  position: absolute;
  top: 0;
  left: 0;
  z-index:2;

}

.receive-content{
  position: relative;
  width: 100%;
  height: 60%;
  margin:20% auto 0;

}

.receive-img{
  width: 100%;
  height: 100%;
}

.receive-close-btn,.receive-look-btn,.receive-num{
  position: absolute;
}

.receive-num{
  left: 50%;
  transform: translate(-50%, -50%);
  bottom: 21%;
  min-width: 70%;

  font-size:240%;
  font-weight:800;
  color:rgba(254,252,229,1);

  background:linear-gradient(183deg,rgba(255,250,201,1) 31.298828125%, rgba(255,228,85,1) 92.138671875%);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
  text-align:center;
}

.receive-close-btn{
  width: 30%;
  height: 10%;
  right: 0;
  top: 0;
}

.receive-look-btn{
  width: 50%;
  height: 20%;
  bottom: 10%;
  left: 25%;
  margin: 0 auto;
}
