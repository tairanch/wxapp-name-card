/* pages/product/shopCart/components/cartStore/CartStore.wxss */
.cart-store{
  color: #353535;
  margin-bottom: 10px;
  background: #fff;
  box-sizing: border-box;
}
/* header */
.cart-store .header-wrap {
  height:40px;
  background: #fff;
}
.cart-store .header-wrap .header{
  height: 40px;
  width: 100%;
  position: relative;
  top: 0;
  background: #fff;
}
.header-wrap .header .store-header{
  height: 40px;
  border-bottom: 1px solid #f4f4f4;
  line-height: 39px;
  font-size: 13px;
  display: flex;
  text-align: center;
  box-sizing: border-box;
}
.header-wrap .header .store-header .checkbox {
    width: 45px;
}
.header-wrap .header .store-header .store-name {
    display: flex;
    flex: 1;
		overflow:hidden;
		text-align:left;
		line-height:43px;
		margin-right:30px;
		word-break: break-all;
}
.header-wrap .header .store-name-text {
  display:-webkit-box;
	word-break: break-all;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-line-clamp:1;
	-webkit-box-orient:vertical;
}
.header-wrap .header .store-name-text .image-biz {
  vertical-align: -4px;
  width: 15px;
  height: 17px;
}
.header-wrap .header .store-name-text .image-default {
  vertical-align: -3px;
  width: 16px;
  height: 15px;
}
.header-wrap .header .store-name-text .image-good {
  vertical-align: -4px;
  width: 17px;
  height: 17px;
}
.header-wrap .header .store-name-text .image-self {
  vertical-align: -4px;
  width: 20px;
  height: 20px;
}
.header-wrap .header .store-name-text .image-biz {
  vertical-align: -4px;
  width: 15px;
  height: 17px;
}
.header-wrap .header .store-header .open-icon{
  margin-right: 8px;
}
.header-wrap .header .open-icon .arrow-right-icon{
  margin-left:8px;
	vertical-align:-1px;
  display:inline-block;
	width:7px;
	height:12px;
}
.header-wrap .header .store-header .store-edit {
  padding-right:5px;
}
.header-wrap .header .store-edit .text {
	width: 40px;
	height: 16px;
	line-height: 18px;
	vertical-align: middle;
}
.header-wrap .header .store-edit .one {
  padding: 5px;
  color:#ff5555;  
}
.header-wrap .header .store-edit .two {
  margin: 5px;
  padding-left: 5px;
  border-left: 1px solid #d9d9d9;
}

/* store-body */
.cart-store .store-body {
    padding-bottom: 1px;
}