/* pages/product/pieceSaleShare/pieceSaleShare.wxss */

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: #323232;
}

.canvas_pre {
  position: absolute;
  z-index: 1;
  top: -6000px;
  left: 0px;
  width: 500px;
  height: 400px;
}

.content {
  width: 68%;
  margin-left: 16%;
  height: 100vh;
}

.content-pre{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.content-text {
  width: 100%;
  position: absolute;
  top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-bg {
  width: 100%;
}

.content-text-title{
  font-size: 30rpx;
  color: #353535;
  font-weight: 600;
}

.content-text-from{
  font-size: 25rpx;
  color: #999999;
  margin-top: 10rpx;
}

.content-text-img{
  margin-top: 30rpx;
}

.content-bottom{
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  bottom: 20rpx
}

.content-bottom-left{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-bottom: 10rpx
}

.content-bottom-left-title{
  width: 300rpx;
  font-size: 28rpx;
  color: #353535;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2
}

.content-bottom-left-other{
  display: flex;
  flex-direction: row;
}

.content-bottom-left-person{
  font-size: 30rpx;
  color: #353535;
  margin-top: 10rpx;
}

.content-bottom-left-price{
  font-size: 30rpx;
  color: #E60A30;
  font-weight: 600;
  margin-top: 10rpx;
}

.content-bottom-right{
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
  margin-bottom: 10rpx
}

.content-bottom-right-img{
  width: 130rpx;
  height: 130rpx
}

.content-bottom-right-des{
  font-size: 17rpx;
  color: #666666;
  margin-top: 10rpx
}

.bottom {
  position: fixed;
  display: flex;
  flex-direction: row;
  bottom: 0;
  width: 100%;
  height: 220rpx;
  background-color: white;
}

.bottom-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-top: 5%;
  align-items: center;
}

.weixin {
  width: 100rpx;
  height: 100rpx;
}

.bottom-text {
  margin-top: 7px;
  font-size: 12px;
}

button {
  font-size: 28rpx;
  background-color: #fff;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

button::after {
  border: none;
}
