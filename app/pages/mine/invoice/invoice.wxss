.header {
    display: flex;
    flex-direction: column;
    color: #353535;
    font-size: 28rpx;
    padding: 20rpx
}


.tap-container {
    display: flex;
    flex-direction: row;
}

.item {

    padding: 4rpx 8rpx;
    margin: 20rpx 20rpx 20rpx 0rpx;
}

.normal {

    border-radius: 4rpx;
    border: solid 1rpx #c9c9c9;
    color: #999;
    font-size: 28rpx
}

.selected {

    border-radius: 4rpx;
    border: solid 1rpx #e60a30;
    color: #e60a30;
    font-size: 28rpx
}

.swiper {
    width: 100vw;
    height: 100vh;
    background: #f4f4f4;
}

.swiper-item {

    width: 100%;
    height: 100%;
}

.sure-btn-container {
    position: fixed;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    padding: 20rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center
}
.sure-btn {
    background: #e60a30;
    height: 90rpx;
    width: 96%;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center
}

.sure-btn-hover {
    opacity: 0.5;
}